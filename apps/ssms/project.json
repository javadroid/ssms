{
  "name": "ssms",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/ssms/src",
  "prefix": "ssms",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/ssms",
        "index": "apps/ssms/src/index.html",
        "main": "apps/ssms/src/main.ts",
        "polyfills": "apps/ssms/src/polyfills.ts",
        "tsConfig": "apps/ssms/tsconfig.app.json",
        "assets": ["apps/ssms/src/favicon.ico", "apps/ssms/src/assets"],
        "styles": [
          "apps/ssms/src/styles.css",
          "apps/ssms/src/sass/style.scss",
          "apps/ssms/src/css/style.css"
        ],
         "scripts": [
              "./node_modules/bootstrap/dist/js/bootstrap.js"
            ],
        "allowedCommonJsDependencies": [
          "sweetalert2"
       ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "18mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/ssms/src/environments/environment.prod.ts",
              "with": "apps/ssms/src/environments/environment.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "ssms:build:production"
        },
        "development": {
          "browserTarget": "ssms:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "proxyConfig": "apps/ssms/proxy.conf.json"
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "ssms:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/ssms/**/*.ts", "apps/ssms/**/*.html"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/ssms/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
